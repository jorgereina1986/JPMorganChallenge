<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin10dp"
    android:layout_marginEnd="@dimen/margin10dp"
    android:layout_marginStart="@dimen/margin10dp"
    android:layout_marginTop="@dimen/margin10dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin10dp"
        android:layout_marginEnd="@dimen/margin10dp"
        android:layout_marginStart="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:orientation="vertical"
        android:weightSum="11">

        <ImageView
            android:id="@+id/album_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/track_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/track_title_text_dimen"/>

        <TextView
            android:id="@+id/artist_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/artist_text_dimen"
            />

        <TextView
            android:id="@+id/album_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/album_text_dimen"/>

    </LinearLayout>
</android.support.v7.widget.CardView>