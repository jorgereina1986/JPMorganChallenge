<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin10dp"
    android:layout_marginEnd="@dimen/margin10dp"
    android:layout_marginStart="@dimen/margin10dp"
    android:layout_marginTop="@dimen/margin10dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin10dp"
        android:layout_marginEnd="@dimen/margin10dp"
        android:layout_marginStart="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:orientation="vertical"
        android:weightSum="14">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/weather_title_text_dimen_32"/>

        <ImageView
            android:id="@+id/weather_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/weather_title_text_dimen_26"/>

        <TextView
            android:id="@+id/minTemp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/weather_text_dimen_20"/>

        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/weather_text_dimen_16"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/weather_text_dimen_16"/>

    </LinearLayout>
</android.support.v7.widget.CardView>